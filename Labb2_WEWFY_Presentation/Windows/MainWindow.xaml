<Window x:Class="Labb2_WEWFY_Presentation.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb2_WEWFY_Presentation"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False">
            <Button Content="main menu" 
                    Command="{Binding ChangeCurrentViewCommand}"
                    CommandParameter="{Binding MenuView}"
                    DockPanel.Dock="Left"
                    />
            <Button Content="quit"
                    Click="Button_Quit"
                    DockPanel.Dock="Right"
                    />
        </DockPanel>
        <ContentControl Content="{Binding CurrentView}"
                        Grid.Row="1"/>
    </Grid>
</Window>
