<UserControl x:Class="Labb2_WEWFY_Presentation.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb2_WEWFY_Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300" d:Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Source="/logo.png"
       Grid.Row="0" 
       VerticalAlignment="Stretch"
       HorizontalAlignment="Stretch"/>
        <StackPanel Grid.Row="1">
            <Button Content="register workout"
                    Command="{Binding MainVM.ChangeCurrentViewCommand}"
                    CommandParameter="{Binding MainVM.RegisterWorkoutView}"
                    Margin="5"
                    Height="30"
                    />
            <Button Content="previous workouts" 
                    Command="{Binding MainVM.ChangeCurrentViewCommand}"
                    CommandParameter="{Binding MainVM.PreviousWorkoutsView}"
                    Margin="5"
                    Height="30"
                    />
            <Button Content="instructions" 
                    Command="{Binding MainVM.ChangeCurrentViewCommand}"
                    CommandParameter="{Binding MainVM.InstructionsView}" 
                    Margin="5"
                    Height="30"
                    />
            <Button Content="total stats" 
                    Command="{Binding MainVM.ChangeCurrentViewCommand}"
                    CommandParameter="{Binding MainVM.TotalStatsView}" 
                    Margin="5"
                    Height="30"
                    />
            <Button Content="quit"
                    Click="Button_Quit"
                    Margin="5"
                    Height="30"/>
        </StackPanel>
    </Grid>
</UserControl>
