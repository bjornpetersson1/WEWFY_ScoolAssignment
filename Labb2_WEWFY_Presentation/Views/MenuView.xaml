<UserControl x:Class="Labb2_WEWFY_Presentation.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb2_WEWFY_Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300" d:Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Image Source="/logo.png"
       Grid.Row="0" 
       VerticalAlignment="Stretch"
       HorizontalAlignment="Stretch"/>
        <StackPanel Grid.Row="1">
            <Button Content="Register workout"
                    Command="{Binding MainVM.ChangeCurrentViewCommand}"
                    CommandParameter="{Binding MainVM.RegisterWorkoutView}"
                    />
            <Button Content="Previous workouts" 
                    Command="{Binding MainVM.ChangeCurrentViewCommand}"
                    CommandParameter="{Binding MainVM.PreviousWorkoutsView}"
                    />
            <Button Content="Instructions" 
                    Command="{Binding MainVM.ChangeCurrentViewCommand}"
                    CommandParameter="{Binding MainVM.InstructionsView}" 
                    />
            <Button Content="Total stats" 
                    Command="{Binding MainVM.ChangeCurrentViewCommand}"
                    CommandParameter="{Binding MainVM.TotalStatsView}" 
                    />
            <Button Content="Quit"
                    Click="Button_Quit"/>
        </StackPanel>
    </Grid>
</UserControl>
