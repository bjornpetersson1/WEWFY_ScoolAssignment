<UserControl x:Class="Labb2_WEWFY_Presentation.Views.PreviousWorkoutsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb2_WEWFY_Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300" d:Background="White"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <TextBlock Text="previous workouts"
                   HorizontalAlignment="Center"
                   Grid.Row="0"/>
        <DataGrid x:Name="myDataGrid" 
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  CanUserSortColumns="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  RowHeaderWidth="0"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Hidden"
                  AlternationCount="2"
                  RowBackground="WhiteSmoke"
                  AlternatingRowBackground="White" 
                  ItemsSource="{Binding Workouts}"
                  SelectedItem="{Binding SelectedWorkout, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date"
                                    Binding="{Binding LoggingDate, StringFormat=yy\\/MM\\/dd}" 
                                    Width="55"/>
                <DataGridTextColumn Header="Duration"
                                    Binding="{Binding TotalDuration, StringFormat=hh\\:mm\\:ss}" 
                                    Width="70"/>
                <DataGridTextColumn Header="Rating"
                                    Binding="{Binding ExperienceRating}" 
                                    Width="55"/>
                <DataGridTemplateColumn Header="Notes"
                                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Notes}"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="80"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Border Grid.Row="2"
        Padding="10"
        BorderBrush="Gray"
        BorderThickness="1">

            <StackPanel DataContext="{Binding SelectedWorkout}">

                <TextBlock Text="Details"
                   FontWeight="Bold"
                   Margin="0 0 0 8"/>

                <TextBlock Text="{Binding LoggingDate, StringFormat=Date: {0:yyyy-MM-dd}}" />
                <TextBlock Text="{Binding NumOfExercises, StringFormat=Number of exercises: {0}}" />
                <ItemsControl ItemsSource="{Binding ExerciseLoggers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>

                                <TextBlock Text="{Binding Exercise.ExerciseName}"
                                   Margin="20 0 0 0"
                                   Width="100"/>

                                <TextBlock Text="{Binding Duration, StringFormat={}{0:hh\\:mm\\:ss}}"
                                   HorizontalAlignment="Left"/>
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock Text="{Binding TotalDuration, StringFormat=Duration: {0:hh\\:mm\\:ss}}" />
                <TextBlock Text="{Binding ExperienceRating, StringFormat=Rating: {0}}" />
                <TextBlock Text="{Binding WaterBefore, StringFormat=Water before: {0} ml}" />
                <TextBlock Text="{Binding WaterDuring, StringFormat=Water during: {0} ml}" />
                <TextBlock>
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Fueling}" Value="True">
                                    <Setter Property="Text" Value="Fueling: Yes"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Fueling}" Value="False">
                                    <Setter Property="Text" Value="Fueling: No"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <TextBlock Text="{Binding Notes, StringFormat=Notes: {0}}"
                   TextWrapping="Wrap"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
