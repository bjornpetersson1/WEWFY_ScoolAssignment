<UserControl x:Class="Labb2_WEWFY_Presentation.Views.PreviousWorkoutsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb2_WEWFY_Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300" d:Background="White"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <TextBlock Text="previous workouts"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   FontSize="20"
                   Grid.Row="0"/>
        <DataGrid x:Name="myDataGrid" 
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  CanUserSortColumns="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  RowHeaderWidth="0"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Hidden"
                  AlternationCount="2"
                  RowBackground="WhiteSmoke"
                  AlternatingRowBackground="White" 
                  ItemsSource="{Binding Workouts}"
                  SelectedItem="{Binding SelectedWorkout, Mode=TwoWay}">
            <DataGrid.Style>
                <Style TargetType="DataGrid">
                    <Setter Property="Grid.RowSpan" Value="2"/>

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HaveSelectedWorkout}" Value="True">
                            <Setter Property="Grid.RowSpan" Value="1"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Style>
            <DataGrid.Columns>
                <DataGridTextColumn Header="date"
                                    Binding="{Binding LoggingDate, StringFormat=yy\\/MM\\/dd}" 
                                    Width="55"/>
                <DataGridTextColumn Header="duration"
                                    Binding="{Binding TotalDuration, StringFormat=hh\\:mm\\:ss}" 
                                    Width="70"/>
                <DataGridTextColumn Header="rating"
                                    Binding="{Binding ExperienceRating}" 
                                    Width="55"/>
                <DataGridTemplateColumn Header="notes"
                                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Notes}"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="80"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Border 
            Grid.Row="2"
            Padding="10"
            BorderBrush="Gray"
            BorderThickness="1"
            Visibility="{Binding HaveSelectedWorkout, Converter={StaticResource BoolToVisibilityConverter}}">

            <ScrollViewer
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <TextBlock 
                        Text="details"
                        HorizontalAlignment="Center"
                        FontWeight="Bold"
                        FontSize="13"
                        Margin="0 0 0 8"/>

                    <TextBlock Text="{Binding SelectedWorkout.LoggingDate, StringFormat=Date: {0:yyyy-MM-dd}}" />
                    <TextBlock Text="{Binding SelectedWorkout.NumOfExercises, StringFormat=Number of exercises: {0}}" />
                    <ItemsControl ItemsSource="{Binding SelectedWorkout.ExerciseLoggers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <DockPanel>

                                    <TextBlock Text="{Binding Exercise.ExerciseName}"
                                        Margin="20 0 0 0"
                                        Width="100"/>

                                    <TextBlock Text="{Binding Duration, StringFormat={}{0:hh\\:mm\\:ss}}"
                                        HorizontalAlignment="Left"/>
                                </DockPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="{Binding SelectedWorkout.TotalDuration, StringFormat=Duration: {0:hh\\:mm\\:ss}}" />
                    <TextBlock Text="{Binding SelectedWorkout.ExperienceRating, StringFormat=Rating: {0}}" />
                    <TextBlock Text="{Binding SelectedWorkout.WaterBefore, StringFormat=Water before: {0} ml}" />
                    <TextBlock Text="{Binding SelectedWorkout.WaterDuring, StringFormat=Water during: {0} ml}" />
                    <TextBlock>
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedWorkout.Fueling}" Value="True">
                                        <Setter Property="Text" Value="Fueling: Yes"/>
                                        <Setter Property="FontFamily" Value="pack://application:,,,/Labb2_WEWFY_Presentation;component/Fonts/#Courier Prime" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedWorkout.Fueling}" Value="False">
                                        <Setter Property="Text" Value="Fueling: No"/>
                                        <Setter Property="FontFamily" Value="pack://application:,,,/Labb2_WEWFY_Presentation;component/Fonts/#Courier Prime" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding SelectedWorkout.Notes, StringFormat=Notes: {0}}"
                        TextWrapping="Wrap"/>
                    <DockPanel Margin="0 10 0 0">
                        <Button 
                            DockPanel.Dock="Left"
                            HorizontalAlignment="Left"
                            Content="edit"
                            Command="{Binding MainVM.ChangeCurrentViewCommand}"
                            CommandParameter="{Binding MainVM.EditPreviousWorkoutView}"/>
                        <Button 
                            DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right"
                            Content="delete"
                            Command="{Binding DeleteWorkoutCommand}"/>
                    </DockPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
