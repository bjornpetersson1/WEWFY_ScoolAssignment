<UserControl x:Class="Labb2_WEWFY_Presentation.Views.PreviousWorkoutsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb2_WEWFY_Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300" d:Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <TextBlock Text="previous workouts"
                   HorizontalAlignment="Center"
                   Grid.Row="0"/>
        <DataGrid x:Name="myDataGrid" 
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  CanUserSortColumns="True"
                  SelectionMode="Extended"
                  SelectionUnit="CellOrRowHeader"
                  RowHeaderWidth="30"
                  VerticalScrollBarVisibility="Visible"
                  HorizontalScrollBarVisibility="Disabled"
                  AlternationCount="2"
                  RowBackground="WhiteSmoke"
                  AlternatingRowBackground="White" 
                  ItemsSource="{Binding Workouts}">
  
        </DataGrid>
        <DataGrid x:Name="mySelectedWorkout" 
                  Grid.Row="2"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  CanUserSortColumns="True"
                  SelectionMode="Extended"
                  SelectionUnit="CellOrRowHeader"
                  RowHeaderWidth="30"
                  VerticalScrollBarVisibility="Disabled"
                  HorizontalScrollBarVisibility="Disabled"
                  AlternationCount="2"
                  RowBackground="WhiteSmoke"
                  AlternatingRowBackground="LightGray" 
                  >
            
        </DataGrid>
    </Grid>
</UserControl>
