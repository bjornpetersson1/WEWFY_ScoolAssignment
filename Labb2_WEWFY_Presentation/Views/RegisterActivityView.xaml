<UserControl x:Class="Labb2_WEWFY_Presentation.Views.RegisterWorkoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb2_WEWFY_Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300" d:Background="White"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <TextBlock Text="add workout"
                   HorizontalAlignment="Center"
                   Grid.Row="0"/>
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="choose exercise: " />                
                <ComboBox 
                    ItemsSource="{Binding Exercises}"
                    SelectedItem="{Binding SelectedExcersise}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="duration (hh:mm:ss): " />
                <TextBox 
                    Text="{Binding ExerciseDuration}"/>
            </StackPanel>
            <Button Content="add exercise" 
                    Command="{Binding AddExerciseCommand}"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="current workout" />
            <DataGrid x:Name="myWorkoutGrid" 
              AutoGenerateColumns="False"
              IsReadOnly="True"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              CanUserReorderColumns="False"
              CanUserResizeRows="False"
              CanUserResizeColumns="False"
              CanUserSortColumns="True"
              SelectionMode="Extended"
              SelectionUnit="FullRow"
              RowHeaderWidth="30"
              VerticalScrollBarVisibility="Visible"
              HorizontalScrollBarVisibility="Disabled"
              AlternationCount="2"
              RowBackground="WhiteSmoke"
              AlternatingRowBackground="White" 
              ItemsSource="{Binding CurrentWorkoutExercises}"
              SelectedItem="{Binding SelectedWorkoutExercise}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Exercise" Binding="{Binding ExerciseName}" />
                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" />
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="remove exercise" 
                    Command="{Binding RemoveExerciseCommand}"
                    DockPanel.Dock="Right"/>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="water before workout (ml): " />
                <TextBox Text="{Binding WaterBefore, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="water during workout (ml): " />
                <TextBox Text="{Binding WaterDuring, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="fueling during workout? " />
                <RadioButton Content="Yes" 
                             IsChecked="{Binding Fueling}"/>
                <RadioButton Content="No" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="notes: " />
                <TextBox Text="{Binding Notes}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="rate your experience: " />
                <ComboBox   SelectedValue="{Binding ExperienceRating}"
                            SelectedValuePath="Content">
                    <ComboBoxItem Content="1" />
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" IsSelected="True"/>
                    <ComboBoxItem Content="4" />
                    <ComboBoxItem Content="5" />
                </ComboBox>
            </StackPanel>

            <Button Content="add workout" 
                    Command="{Binding AddNewWorkoutCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
